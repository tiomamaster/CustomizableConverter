<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    app:layout_collapseParallaxMultiplier="1.0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_converter_name"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:labelFor="@+id/edit_text_name"/>

    <EditText
        android:id="@+id/edit_text_name"
        android:hint="@string/hint_converter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:text="Converter Name"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_msg_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/msg_converter_exist"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        android:textColor="@color/error"
        tools:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_units"
        android:paddingTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_create_units"
        android:paddingTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/msg_loading"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@color/accent"
        android:textColor="@color/icons"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/title_btn_update" />

    <TextView
        android:id="@+id/text_msg_loading_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:labelFor="@id/btn_update"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Error message" />

</LinearLayout>